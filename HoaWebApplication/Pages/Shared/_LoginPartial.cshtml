@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-light text-left" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @{ var name = User.Claims.FirstOrDefault(c => c.Type == "name")?.Value;
            }
            Hello @name.Substring(0, name.IndexOf(" "))

        </a>
        <div class="dropdown-menu bg-dark background-dark" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item text-dark" asp-page="/Account/Profile">Profile</a>
            <form class="dropdown-item text-dark" asp-page="/Account/Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-link text-light ml-0 pl-0">Log out</button>
            </form>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-page="/Account/Login">Log in</a>
    </li>
}